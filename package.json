    "twoslash-eslint": "workspace:*",
    "twoslash-vue": "workspace:*",
    "typescript": "^5.5.4",
    "unbuild": "^2.0.0",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.4.3",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5",
    "vue": "^3.5.3"
  },
  "resolutions": {
    "@types/node": "^22.5.4",
    "twoslash": "workspace:*",
    "twoslash-vue": "workspace:*",
