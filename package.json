{
  "name": "@twoslash/monorepo",
  "type": "module",
  "version": "0.0.6",
  "private": true,
  "packageManager": "pnpm@8.14.1",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "pnpm -r run build",
    "test": "vitest",
    "lint": "eslint .",
    "bench": "vitest bench --run",
    "release": "bumpp -r && pnpm -r publish",
    "docs": "pnpm -C docs run docs:dev",
    "docs:build": "pnpm -C docs run docs:build",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.2",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.47",
    "@typescript/twoslash": "^3.2.4",
    "@typescript/vfs": "1.5.0",
    "@vitest/coverage-v8": "^1.2.0",
    "bumpp": "^9.2.1",
    "eslint": "^8.56.0",
    "fast-glob": "^3.3.2",
    "jiti": "^1.21.0",
    "lint-staged": "^15.2.0",
    "lz-string": "^1.5.0",
    "mlly": "^1.5.0",
    "pretty-format": "^29.7.0",
    "react": "^18.2.0",
    "simple-git-hooks": "^2.9.0",
    "tslib": "^2.6.2",
    "twoslash": "workspace:*",
    "twoslash-vue": "workspace:*",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "vitest": "^1.2.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "shikiji-twoslash@0.9.19": "patches/shikiji-twoslash@0.9.19.patch",
      "vitepress-plugin-twoslash@0.9.19": "patches/vitepress-plugin-twoslash@0.9.19.patch"
    }
  },
  "resolutions": {
    "twoslash": "workspace:*",
    "twoslash-vue": "workspace:*"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
