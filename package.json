    "@shikijs/twoslash": "^1.16.2",
    "@shikijs/vitepress-twoslash": "^1.16.2",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript/twoslash": "^3.2.8",
    "@typescript/vfs": "^1.6.0",
    "@vitest/coverage-v8": "^2.0.5",
    "@vueuse/core": "^11.0.3",
    "bumpp": "^9.5.2",
    "eslint": "^9.9.1",
