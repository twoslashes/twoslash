{
  "name": "twoslashes",
  "version": "0.0.0",
  "license": "MIT",
  "author": "TypeScript team",
  "description": "Rewrite of TypeScript TwoSlash",
  "homepage": "https://github.com/antfu/twoslashes",
  "repository": {
    "url": "https://github.com/antfu/twoslashes",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/antfu/twoslashes/issues"
  },
  "main": "dist/index.js",
  "module": "dist/twoslash.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "bootstrap": "yarn build",
    "build": "tsdx build && yarn readme && yarn make-global",
    "make-global": "node scripts/makeGlobals.js",
    "readme": "yarn md-magic README.md --config ./scripts/inline-results.js && yarn prettier README.md --write",
    "test": "jest",
    "lint": "tsdx lint"
  },
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "@types/prettier": "^1.19.0",
    "husky": "^4.2.3",
    "jest": "^29.5.0",
    "jest-file-snapshot": "^0.3.8",
    "markdown-magic": "^1.0.0",
    "prettier": "^2.3.2",
    "ts-jest": "^29.0.5",
    "tsdx": "^0.14.1",
    "tslib": "^1.10.0",
    "typescript": "^5.3"
  },
  "jest": {
    "preset": "ts-jest",
    "watchPathIgnorePatterns": [
      "test/results"
    ]
  },
  "browser": {
    "fs": false,
    "typescript": false
  },
  "dependencies": {
    "@typescript/vfs": "1.5.0",
    "debug": "^4.1.1"
  },
  "peerDependencies": {
    "typescript": "*"
  }
}
