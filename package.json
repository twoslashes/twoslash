    "release": "bumpp -r && pnpm -r publish",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.2",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.47",
    "@typescript/twoslash": "^3.2.4",
    "@typescript/vfs": "1.5.0",
    "@vitest/coverage-v8": "^1.1.3",
    "bumpp": "^9.2.1",
    "eslint": "^8.56.0",
    "fast-glob": "^3.3.2",
    "lint-staged": "^15.2.0",
    "lz-string": "^1.5.0",
    "react": "^18.2.0",
    "simple-git-hooks": "^2.9.0",
    "tslib": "^2.6.2",
    "twoslashes": "workspace:*",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "vitest": "^1.1.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
