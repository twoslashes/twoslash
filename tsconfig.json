{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleDetection": "force",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "twoslash": [
        "./packages/twoslash/src/index.ts"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "vite/client"
    ],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/test/fixtures",
    "**/test/results",
    "**/dist"
  ]
}
